
def algorithm1(N):
    binary = bin(N)[2:]
    s = sum(int(d) for d in binary)
    b1 = s % 2
    binary += str(b1)
    s2 = s + b1
    b2 = s2 % 2
    binary += str(b2)
    return int(binary, 2)

def algorithm2(N):
    binary = bin(N)[2:]
    if N % 2 == 0:
        binary += '00'
    else:
        binary += '11'
    return int(binary, 2)

def algorithm3(N):
    binary = bin(N)[2:]
    if N % 2 == 0:
        binary += '10'
    else:
        binary += '01'
    return int(binary, 2)

def algorithm4(N, bit_length=8):
    binary = bin(N)[2:].zfill(bit_length)
    inverted = ''.join('1' if b == '0' else '0' for b in binary)
    new_num = int(inverted, 2)
    return N - new_num

def algorithm5(N):
    binary = bin(N)[2:]
    if len(binary) >= 2:
        first_two = binary[:2]
        binary += first_two[::-1]
    return int(binary, 2)

def algorithm6(N, steps=3):
    binary = bin(N)[2:]
    for _ in range(steps):
        zeros = binary.count('0')
        ones = binary.count('1')
        if zeros == ones:
            binary += binary[-1]
        else:
            binary += '0' if zeros < ones else '1'
    return int(binary, 2)

def algorithm7(N):
    binary = bin(N)[2:]
    if N % 2 == 0:
        binary = '1' + binary + '0'
    else:
        binary = '11' + binary + '11'
    return int(binary, 2)

def algorithm8(N):
    binary = bin(N)[2:]
    if N % 2 == 0:
        binary = '10' + binary
    else:
        binary = '1' + binary + '01'
    return int(binary, 2)

def algorithm9(N, bit_length=8):
    binary = bin(N)[2:].zfill(bit_length)
    inverted = ''.join('1' if b == '0' else '0' for b in binary)
    return int(inverted, 2)

def algorithm10(N):
    binary = bin(N)[2:]
    s = sum(int(d) for d in binary)
    binary += str(s % 2)
    return int(binary, 2)

if __name__ == "__main__":
    test_number = 42
    
    print(f"Исходное число: {test_number}")
    print(f"Бинарная запись: {bin(test_number)[2:]}")
    print()
    
    algorithms = [
        ("1. Два бита контроля четности", algorithm1),
        ("2. Добавление 00/11", algorithm2),
        ("3. Добавление 10/01", algorithm3),
        ("4. Инвертирование и вычитание", lambda x: algorithm4(x, 8)),
        ("5. Первые две цифры в обратном порядке", algorithm5),
        ("6. Редкая/последняя цифра (3 шага)", algorithm6),
        ("7. Добавление в начало и конец", algorithm7),
        ("8. Префикс по четности", algorithm8),
        ("9. Простое инвертирование", lambda x: algorithm9(x, 8)),
        ("10. Один бит четности", algorithm10)
    ]
    
    for name, func in algorithms:
        result = func(test_number)
        print(f"{name}: {result} (бинарно: {bin(result)[2:]})")